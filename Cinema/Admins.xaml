        <Label  Foreground="Red" x:Name="label6" Content="Главные актеры" HorizontalAlignment="Left" Height="34" Margin="42,296,0,0" VerticalAlignment="Top" Width="144" FontSize="15"/>
        <TextBox x:Name="textBoxName" HorizontalAlignment="Left" Height="30" Margin="164,106,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="342"/>
